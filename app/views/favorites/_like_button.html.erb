<% if current_user.favpost?(store) %>
        <%= form_for(current_user.favorites.find_by(store_id: store.id), html: { method: :delete }) do |f| %>
            <%= hidden_field_tag :store_id, @stores.id %>
            <%= f.submit 'お気に入り登録解除', class: 'btn btn-danger' %>
        <% end %>
    <% else %>
        <%= form_for(current_user.favorites.build) do |f| %>
            <%= hidden_field_tag :store_id, @stores.id %>
            <%= f.submit 'お気に入り登録', class: 'btn btn-primary' %>
        <% end %>
<% end %>